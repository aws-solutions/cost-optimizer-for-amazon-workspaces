{
    "compilerOptions": {
        "outDir": "build",
        "alwaysStrict": true,
        "declaration": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": [
            "es2018"
        ],
        "module": "CommonJS",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        "target": "ES2018",
        "ignoreDeprecations": "5.0"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "build",
        "node_modules",
        "webui",
        "lambda",
        "cdk.out"
    ]
}
